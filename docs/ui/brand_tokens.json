{
  "version": "1.0.0",
  "source": "BRAND.md",
  "colors": {
    "background": {
      "primary_base": {
        "value": "#0E1C36",
        "name": "Deep Midnight",
        "usage": "Global backgrounds, navigation shells, modal chrome",
        "contrast_pairs": ["text.on_dark", "icons.on_dark"]
      }
    },
    "surface": {
      "neutral_high": {
        "value": "#F4F7FB",
        "usage": "Cards, tables, documentation callouts",
        "contrast_pairs": ["text.on_light"]
      },
      "neutral_mid": {
        "value": "#E1E6EE",
        "usage": "Code blocks, dividers, secondary panels",
        "contrast_pairs": ["text.on_light", "icons.on_light"]
      }
    },
    "accent": {
      "action_primary": {
        "value": "#1BE7FF",
        "name": "Ionosphere",
        "usage": "Links, primary buttons, focus rings",
        "constraints": "Use as the first accent color in a view"
      },
      "signal_secondary": {
        "value": "#F5A623",
        "name": "Molten Amber",
        "usage": "Alerts, badge counts, algorithmic state indicators",
        "constraints": "Only introduce when a second accent is needed"
      }
    },
    "status": {
      "positive": {
        "value": "#19B37E",
        "name": "Proof Green",
        "usage": "Success toasts, growth deltas, healthy validators",
        "constraints": "Reserve for confirmations and celebratory states"
      },
      "negative": {
        "value": "#FF4E4E",
        "name": "Guard Rail",
        "usage": "Errors, destructive actions, failure banners",
        "constraints": "Pair with calm surfaces to maintain legibility"
      }
    }
  },
  "typography": {
    "fonts": {
      "primary": {
        "family": "Space Grotesk",
        "fallback": "Inter",
        "weights": [400, 500, 600]
      },
      "mono": {
        "family": "JetBrains Mono",
        "weights": [400, 500]
      }
    },
    "scales": {
      "headline_lg": {
        "font_family": "primary",
        "size_px": 32,
        "letter_spacing_percent": -1,
        "line_height_percent": 120,
        "usage": "Page titles, high-signal metrics"
      },
      "headline_md": {
        "font_family": "primary",
        "size_px": 28,
        "letter_spacing_percent": -1,
        "line_height_percent": 120,
        "usage": "Section headers, card titles"
      },
      "body_base": {
        "font_family": "primary",
        "size_px": 16,
        "line_height_percent": 150,
        "usage": "Paragraphs, descriptions, data summaries"
      },
      "label_sm": {
        "font_family": "primary",
        "size_px": 12,
        "letter_spacing_percent": 6,
        "text_transform": "uppercase",
        "usage": "Meta labels, column headers"
      },
      "label_md": {
        "font_family": "primary",
        "size_px": 14,
        "letter_spacing_percent": 6,
        "text_transform": "uppercase",
        "usage": "Navigation labels, filter chips"
      }
    }
  },
  "spacing": {
    "base_unit_px": 8,
    "scale": [8, 16, 24, 32, 40, 48, 64],
    "layout": {
      "columns_desktop": 12,
      "columns_mobile": 4,
      "gutter_multiple": 3,
      "max_card_height_vh": 80,
      "critical_content_zone": "Upper-left quadrant"
    }
  },
  "motion": {
    "timings": {
      "interactive_feedback_ms": 150,
      "modal_transition_ms": 200,
      "loading_shimmer_ms": 400
    },
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
    "constraints": {
      "data_update_frequency_hz": 2,
      "preferred_loading_indicator": "neutral shimmer"
    }
  }
}
