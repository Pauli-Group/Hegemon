{
  "name": "hegemon-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "out/main/main.cjs",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build": "electron-vite build",
    "package": "electron-vite build && electron-builder --dir",
    "dist": "electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.hegemon.desktop",
    "productName": "Hegemon",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "out/**",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../target/release/hegemon-node",
        "to": "bin/hegemon-node"
      },
      {
        "from": "../target/release/walletd",
        "to": "bin/walletd"
      },
      {
        "from": "../config/dev-chainspec.json",
        "to": "config/dev-chainspec.json"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/icon.icns",
        "to": "icon.icns"
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  }
}
